<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/eventname_edittext_addevent"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Task:"
        android:id="@+id/eventLabel_addevent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Start Date:"
        android:id="@+id/startdate_addevent"
        android:layout_below="@+id/eventLabel_addevent"
        android:layout_alignRight="@+id/descripLabel_addevent"
        android:layout_alignEnd="@+id/descripLabel_addevent" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="date|time"
        android:ems="10"
        android:id="@+id/startdate_editText_addevent"
        android:layout_below="@+id/eventname_edittext_addevent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Description:"
        android:id="@+id/descripLabel_addevent"
        android:gravity="center_vertical"
        android:layout_below="@+id/enddate_textview_addevent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="date|time"
        android:ems="10"
        android:id="@+id/enddate_editText_addevent"
        android:layout_alignBottom="@+id/enddate_textview_addevent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/startdate_editText_addevent"
        android:layout_alignStart="@+id/startdate_editText_addevent" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/description_edittext_addevent"
        android:nestedScrollingEnabled="false"
        android:inputType="textMultiLine"
        android:layout_above="@+id/people_edittext_addevent"
        android:layout_below="@id/enddate_editText_addevent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="People:"
        android:id="@+id/peopleLabel_addevent"
        android:gravity="center_vertical"
        android:layout_above="@+id/buttonDone_addevent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/people_edittext_addevent"
        android:inputType="textMultiLine"
        android:layout_above="@+id/buttonDone_addevent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/peopleLabel_addevent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/buttonDone_addevent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="End Date:"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/enddate_textview_addevent"
        android:gravity="center_vertical"
        android:layout_below="@+id/startdate_editText_addevent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>