<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/calendar_fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/listview_fragmentcontainer">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/listview_fragmentcontainer"
        android:layout_above="@+id/checkProject"
        android:layout_alignParentLeft="true"
       >
    </RelativeLayout>
    <Button
        android:id="@+id/checkProject"
        android:text="@string/checkProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal|bottom|left"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/username_mainfragment"
        android:layout_toEndOf="@+id/username_mainfragment" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/username_mainfragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:textColor="#1c2de4" />

</RelativeLayout>