<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="User Registration"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_marginTop="115dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/userid_editTextt_user_register"
        android:paddingLeft="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/password_editText_user_register"
        android:layout_alignStart="@+id/password_editText_user_register" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="User Name"
        android:id="@+id/useridLable"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/textView"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/done_Button_user_register"
        android:layout_toStartOf="@+id/done_Button_user_register" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/password_editText_user_register"
        android:layout_alignTop="@+id/passwordLabel"
        android:layout_toRightOf="@+id/passwordLabel"
        android:layout_toEndOf="@+id/passwordLabel"
        android:paddingLeft="30dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Password"
        android:id="@+id/passwordLabel"
        android:layout_below="@id/useridLable"
        android:gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/done_Button_user_register"
        android:layout_toStartOf="@+id/done_Button_user_register" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done_Button_user_register"
        android:layout_below="@+id/password_editText_user_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />


</RelativeLayout>